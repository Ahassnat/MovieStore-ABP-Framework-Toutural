@page
@model MovieStore.Web.Pages.Actors.IndexModel
@{
}
@using Microsoft.AspNetCore.Authorization
@using Microsoft.Extensions.Localization
@using MovieStore.Localization
@using MovieStore.Permissions
@inject IStringLocalizer<MovieStoreResource> L
@inject IAuthorizationService AuthorizationService
@section scripts
{
<abp-script src="/Pages/Actors/Index.js" />
}
<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title> @L["Menu:Actors"]</abp-card-title>
            </abp-column>

            <abp-column size-md="_6"  class="text-end">
                @if(await AuthorizationService.IsGrantedAsync(MovieStorePermissions.Actors.Create))
                {
                     <abp-button id="NewActorButton"
                            text="@L["NewActor"].Value"
                            icon="plus"
                            button-type="Primary" />
                }
               
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        Search: 
                <input name="Search" /> 
        <abp-table id="ActorsTable" striped-rows="true" />
    </abp-card-body>
</abp-card>
